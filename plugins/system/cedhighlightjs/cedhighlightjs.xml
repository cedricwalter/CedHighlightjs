                    <option value="atelier-lakeside.dark.min.css">Atelier Lakeside - Dark</option>
                    <option value="atelier-lakeside.light.min.css">Atelier Lakeside - Light</option>
                    <option value="atelier-seaside.dark.min.css">Atelier Seaside - Dark</option>
                    <option value="atelier-seaside.light.min.css">Atelier Seaside - Light</option>
                    <option value="paraiso.dark.min.css">Paraíso - Dark</option>
                    <option value="paraiso.light.min.css">Paraíso - Light</option>
                    <option value="color-brewer.min.css">Colorbrewer</option>
